<?xml version="1.0" encoding="utf-8"?>

<launch>

  <arg name="amcl_launch_xml" default="$(find turtlebot_navigation)/launch/includes/amcl/amcl.launch.xml"/>
    <include file="$(arg amcl_launch_xml)"/>

  <arg name="yaml_file" default="$(find pathtracer)/data/maps/map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg yaml_file)" respawn="false">
    <param name="frame_id" value="map"/>
  </node>

    

  <env name="GAZEBO_RESOURCE_PATH" value="$(find pathtracer)/data/includes/meshes"/>
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="use_sim_time" value="true"/>
      <arg name="debug" value="false"/>
      <arg name="world_name" value="$(find pathtracer)/data/world/map.world"/>
    </include>

  <include file="$(find pathtracer)/data/includes/Turtlebot_Kinect_Lidar.launch.xml">
    <arg name="init_pose" value="-x -4.0 -y -3.0 -z 0.0 -Y 3.14"/>
  </include>

  <include file="$(find pathtracer)/data/includes/movebase_gmapping.launch.xml">
  </include> 




</launch>



